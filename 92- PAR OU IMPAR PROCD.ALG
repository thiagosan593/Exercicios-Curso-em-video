algoritmo "92- PAR OU IMPAR PROCD"
var
   N1 : inteiro
PROCEDIMENTO PAROUIMPAR(a:inteiro)
inicio
  SE (a%2=0) ENTAO  //(nao(a%2=0)) negação de resultado
      ESCREVAL("NUMERO PAR")
   SENAO
      ESCREVAL("Número impar")
   fimse
fimprocedimento
iniciO

   ESCREVA (" DIGITE UM NUMERO : ")
   LEIA(N1)
   PAROUIMPAR(n1)

fimalgoritmo