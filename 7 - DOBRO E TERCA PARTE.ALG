algoritmo "dobro e terca parte"
var

   Numero , dobro, terca_parte : real
inicio

      escreval (" Insira um número")
      leia (numero)
      dobro <- numero *2
      terca_parte <- numero/3
      escreval (" o dobro de " , numero , " é " , dobro:2:1 )
      escreval (" A terca parte de ", numero , " e ", terca_parte:6:4)

fimalgoritmo